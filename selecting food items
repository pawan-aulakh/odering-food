#include<stdio.h>
#include<conio.h>

int main()
{
start:	
	int choice;
	printf("enter the choice(1-5): ");
	scanf("%d",&choice);
	
	switch(choice)
	{
		case 1: printf("Food item-Pizza \nPrice: Rs 300");
			break;
		case 2: printf("Food item- Pav bhaji \nPrice: Rs 150");
			break;
		case 3:	printf("Food item- Burger \nPrice: Rs 129");
			break;
		case 4: printf("Food item- French Fries \nPrice: Rs 99");
			break;
		case 5: printf("Food item- Momos \nPrice: Rs 60");
			break;
		default: printf("invalid choice");
			break;				
			
	}
	char ch;
	printf("\nwant to order more..?? choose(y/n)\n");
	scanf("\n%ch",&ch);
	if(ch=='y' || ch=='Y')
		goto start;
	else
		return 0;
	
}
